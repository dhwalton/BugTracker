@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>BugTracker</title>

    <!-- Bootstrap -->
    <link href="~/landing/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <!--plugins-->
    <link href="~/landing/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/landing/bower_components/flexslider/flexslider.css" rel="stylesheet">
    <link href="~/landing/bower_components/lightbox2/dist/css/lightbox.css" rel="stylesheet">
    <link href="~/landing/owl-carousel/owl.carousel.css" rel="stylesheet">
    <link href="~/landing/owl-carousel/owl.theme.css" rel="stylesheet">
    <link href="~/landing/owl-carousel/owl.transitions.css" rel="stylesheet">
    <link href="~/landing/et-line-icons/style.css" rel="stylesheet">
    <link href="~/landing/css/animate.css" rel="stylesheet">
    <!--custom css file-->
    <link href="~/landing/css/style.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body data-spy="scroll">
    <!-- Static navbar -->
    <nav class="navbar header-v1 header-transparent navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header scroll-to">

                <a class="navbar-brand" href="index.html">BugTracker - by Donny Walton</a>
            </div>

        </div><!--/.container-fluid -->
    </nav><!--navigation end here-->

    <section id="features">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <img class="img-responsive" src="../assets/images/bug3.svg" height="300" style="margin: 0 auto;" />
                </div>
            </div>
            <div class="row">
                <div class="col-sm-8 col-sm-offset-2 center-title">
                    <h2>Made with .NET and MVC</h2>
                    <p>
                        This fully-featured web app uses the .NET framework and MVC to track software issues across multiple projects.
                        It offers the ability to assign users to and from projects, manage the priority and status of issues, as well as
                        the ability to leave comments and attachments - with an email notification when any activity has been detected.
                    </p>
                    <p>The app utilizes four user roles that offer varying levels of access.  Try it out by clicking one of the links below!</p>
                </div>
            </div><!--center title row end-->
            <div class="row">
                <div class="row" id="role-login">
                    <div class="col-sm-6 col-lg-3 margin-b-30">

                        <div class="statistic-widget-box bg-danger">
                            <i class="fa fa-briefcase"></i>
                            <div class="content overflow-hidden">
                                <a href="@Url.Action("DemoLogin","Account",new { roleIndex=1 })">
                                    <h1 class="role-title">Admin</h1>
                                    <p>All Access</p>
                                </a>
                            </div>
                        </div><!--statistic box end-->

                    </div><!--col end-->
                    <div class="col-sm-6 col-lg-3 margin-b-30">
                        <div class="statistic-widget-box bg-primary">
                            <i class="fa fa-binoculars"></i>
                            <div class="content overflow-hidden">
                                <a href="@Url.Action("DemoLogin","Account",new { roleIndex=2 })">
                                    <h1 class="role-title">Manager</h1>
                                    <p>Can assign and edit tickets</p>
                                </a>
                            </div>
                        </div><!--statistic box end-->
                    </div><!--col end-->
                    <div class="col-sm-6 col-lg-3 margin-b-30">
                        <div class="statistic-widget-box bg-success">
                            <i class="fa fa-user"></i>
                            <div class="content overflow-hidden">
                                <a href="@Url.Action("DemoLogin","Account",new { roleIndex=3 })">
                                    <h1 class="role-title">Developer</h1>
                                    <p>Can edit assigned tickets</p>
                                </a>
                            </div>
                        </div><!--statistic box end-->
                    </div><!--col end-->
                    <div class="col-sm-6 col-lg-3 margin-b-30">
                        <div class="statistic-widget-box bg-info">
                            <i class="fa fa-users"></i>
                            <div class="content overflow-hidden">
                                <a href="@Url.Action("DemoLogin","Account",new { roleIndex=4 })">
                                    <h1 class="role-title">Submitter</h1>
                                    <p>Can submit tickets to projects</p>
                                </a>
                            </div>
                        </div><!--statistic box end-->
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 bigger"> - or - <p><h1>@Html.ActionLink("Login", "Login", "Account")</h1></p></div>
                </div>
            </div>
    </section>


    <script src="~/landing/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="~/landing/js/jquery-migrate.min.js" type="text/javascript"></script>
    <script src="~/landing/js/jquery.easing.1.3.min.js" type="text/javascript"></script>
    <script src="~/landing/js/jquery.backstretch.min.js" type="text/javascript"></script>
    <script src="~/landing/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/landing/js/smoothscroll.js"></script>
    <script src="~/landing/bower_components/wow/dist/wow.min.js"></script>
    <script src="~/landing/bower_components/lightbox2/dist/js/lightbox.min.js" type="text/javascript"></script>
    <script src="~/landing/owl-carousel/owl.carousel.min.js" type="text/javascript"></script>
    <script src="~/landing/js/modernizr.custom.97074.js" type="text/javascript"></script>
    <script src="~/landing/js/parallax.min.js" type="text/javascript"></script>
    <script src="~/landing/js/custom.js" type="text/javascript"></script>

</body>
</html>