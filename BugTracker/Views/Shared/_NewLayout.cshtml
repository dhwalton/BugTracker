                            <span class="menu-text">My Account</span>
                            <span class="selected"></span>
                        </a>
                    </li>

                    @if (User.IsInRole("Admin")) {
                    <li class="">
                        <a href="~/Projects/UserManager">
                            <i class="fa fa-user-secret"></i>
                            <span class="menu-text">Manage User Roles</span>
                            <span class="selected"></span>
                        </a>
                    </li>
                    }

                    @if (User.IsInRole("Admin") || User.IsInRole("Developer") || User.IsInRole("Project Manager")) {
                        <!-- Projects -->
                        <li class="hoe-has-menu">
                            <a href="#">
                                <i class="ion ion-easel"></i>
                                <span class="menu-text">Projects</span>
                                <span class="selected"></span>
                            </a>
                            
                            <ul class="hoe-sub-menu">
                                @if (User.IsInRole("Admin") || User.IsInRole("Project Manager"))
                                {
                                    <li>
                                        <a href="~/Projects/Create">
                                            <span class="menu-text">Create a Project</span>
                                            <span class="selected"></span>
                                        </a>
                                    </li>
                                }

                                @if (User.IsInRole("Admin")) {
                                    <li>
                                        <a href="~/Projects">
                                            <span class="menu-text">View All Projects</span>
                                            <span class="selected"></span>
                                        </a>
                                    </li>
                                }

                                @if(User.IsInRole("Project Manager") || User.IsInRole("Developer")) {
                                    <li class="~/Projects">
                                        <a href="~/Projects">
                                            <span class="menu-text">My Projects</span>
                                            <span class="selected"></span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                    }

                    <!-- Tickets -->
                    <li class="hoe-has-menu">
                        <a href="javascript:void(0)">
                            <i class="fa fa-paperclip"></i>
                            <span class="menu-text">Tickets</span>
                            <span class="selected"></span>
